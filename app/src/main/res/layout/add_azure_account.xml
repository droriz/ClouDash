<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/couldlogo"
            android:layout_width="355dp"
            android:layout_height="186dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:cropToPadding="false"
            android:src="@drawable/azurecloud" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/clientid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/couldlogo"
            android:layout_marginTop="40dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <EditText
                android:id="@+id/clientid_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Client ID"
                android:inputType="text"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clientid"
            android:layout_marginTop="40dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <EditText
                android:id="@+id/tenant_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenant"
                android:inputType="text"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenant"
            android:layout_marginTop="40dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <EditText
                android:id="@+id/subscription_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subscription"
                android:inputType="text"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/InnerRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/save"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:src="@drawable/save_account" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:src="@drawable/backbutton" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>